#include <stdio.h>
#include <iostream>
using namespace std;

int main ()
{
    int x,y;
    printf("Please input x : \n");
    scanf("%d",&x);
    
    printf("Please input y : \n");
    scanf("%d",&y);
    
    printf(" %d + %d = %d \n ",x,y,x+y);
    
    x = 16;
    printf(" %d + %d = %d \n ",x,y,x+y);
    
    x >> 1;
    printf(" %d + %d = %d \n ",x,y,x+y);
    
    x >> 2;
    printf(" %d + %d = %d \n ",x,y,x+y);
    
    x << 1;
    printf(" %d + %d = %d \n ",x,y,x+y);
    
    cout<<"Hello World";
    
    return 0;
}
